{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{"name": "next"}],
    "paths": {
      "@public/*": ["./public/*"],
      "@app/*": ["./src/*"],
      "@api/*": ["./src/app/api/*"],

      "@entities/*": ["./src/entities/*"],
      "@features/*": ["./src/features/*"],

      "@shared/*": ["./src/shared/*"],
      "@providers/*": ["./src/providers/*"],
      "@lib/*": ["./src/shared/lib/*"],

      "@views/*": ["./src/views/*"],
      "@widgets/*": ["./src/widgets/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
